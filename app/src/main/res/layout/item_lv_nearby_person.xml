<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/x180"
        android:layout_height="@dimen/x180"
        android:layout_margin="@dimen/x50" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_avatar"
        android:layout_marginTop="@dimen/y5"
        android:layout_toRightOf="@id/iv_avatar"
        android:text="露露"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/x40" />

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_name"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="@dimen/y10"
        android:background="@mipmap/img_xueli_renzheng" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/y10"
        android:layout_toRightOf="@id/iv1"
        android:background="@mipmap/img_phone_renzheng" />

    <ImageView
        android:layout_width="@dimen/x50"
        android:layout_height="@dimen/x50"
        android:layout_alignBottom="@id/iv_avatar"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/y30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/y20"
        android:background="@mipmap/img_go" />


    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x50"
        android:layout_marginTop="@dimen/y50"
        android:text="4.8"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/x40" />

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="@dimen/x35"
        android:layout_height="@dimen/x35"
        android:layout_alignBottom="@id/tv_score"
        android:layout_marginBottom="@dimen/y10"
        android:layout_marginRight="@dimen/x5"
        android:layout_toLeftOf="@id/tv_score"
        android:background="@mipmap/rating_small_full" />

    <TextView
        android:id="@+id/tv_juli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_score"
        android:layout_marginRight="@dimen/x10"
        android:layout_toLeftOf="@id/iv2"
        android:text="距离800米"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/x40" />

</RelativeLayout>