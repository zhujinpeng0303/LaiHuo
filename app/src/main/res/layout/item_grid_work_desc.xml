<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/x250"
        android:layout_height="@dimen/x250"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:background="@drawable/bg_grey_xuxian_corner">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/x250"
            android:layout_height="@dimen/x250"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/rl_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/iv"
            android:layout_alignTop="@id/iv"
            android:background="@drawable/bg_grey_alpha_corner">

            <ImageView
                android:id="@+id/iv_del"
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/x50"
                android:layout_margin="@dimen/x10"
                android:background="@mipmap/img_close" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >

            <ImageView
                android:id="@+id/iv_add"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:background="@mipmap/img_add"
                />

            <TextView
                android:layout_below="@id/iv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传图片"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/x25"
                android:layout_marginTop="@dimen/y50"
                />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>