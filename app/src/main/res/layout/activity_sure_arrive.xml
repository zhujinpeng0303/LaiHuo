<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroud"
    android:orientation="vertical">

    <include layout="@layout/status_bar" />

    <include layout="@layout/header_top_text" />

    <EditText
        android:id="@+id/et_open_door_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x50"
        android:background="@drawable/bg_et_grey_corner"
        android:hint="请输入用户提供的开门验证码"
        android:inputType="number"
        android:maxLength="4"
        android:padding="@dimen/x30"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/x40" />

    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y30"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:background="@drawable/bg_yellow_corner"
        android:gravity="center"
        android:paddingBottom="@dimen/y40"
        android:paddingTop="@dimen/y40"
        android:text="确认"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/x40" />


</LinearLayout>