<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2212121"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/y300"
        android:layout_marginLeft="@dimen/x100"
        android:layout_marginRight="@dimen/x100"
        android:layout_marginTop="@dimen/y300"
        android:background="@drawable/bg_white_corner"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x50"
                android:text="我发布的列表"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/x35" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/x20"
                android:padding="@dimen/x30"
                android:src="@mipmap/img_close_black"

                />


        </RelativeLayout>

        <View
            android:id="@+id/v"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:layout_below="@id/rl"
            android:background="@color/colorBackgroud" />


        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/x50"
            android:background="@drawable/bg_light_grey_corner"
            android:gravity="center"
            android:paddingBottom="@dimen/y40"
            android:paddingTop="@dimen/y40"
            android:text="取消"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/x40" />


        <ListView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/tv_cancel"
            android:layout_below="@id/v"
            android:scrollbars="none">

        </ListView>

        <LinearLayout
            android:id="@+id/ll_null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/tv_cancel"
            android:layout_below="@id/v"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_null"
                android:layout_width="@dimen/x300"
                android:layout_height="@dimen/x300"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y200"
                android:background="@mipmap/img_null" />

            <TextView
                android:id="@+id/tv_null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/y30"
                android:text="里面什么也没有"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/x35" />


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>