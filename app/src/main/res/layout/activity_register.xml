<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/status_bar" />


    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y180"
        android:layout_marginBottom="@dimen/x50"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:layout_marginTop="@dimen/y50"
        android:background="@drawable/bg_et_grey_corner"
        android:gravity="center_vertical"
        android:hint="请输入手机号"
        android:inputType="number"
        android:maxLength="11"
        android:paddingLeft="@dimen/x30"
        android:textSize="@dimen/x35">

    </EditText>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y180"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:background="@drawable/bg_et_grey_corner">

        <EditText
            android:id="@+id/et_code"
            android:layout_width="@dimen/x500"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:hint="请输入短信验证码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="@dimen/x30"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/x35" />

        <TextView
            android:id="@+id/tv_get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:background="@drawable/bg_grey_corner"
            android:paddingBottom="@dimen/x30"
            android:paddingLeft="@dimen/x80"
            android:paddingRight="@dimen/x80"
            android:paddingTop="@dimen/x30"
            android:text="获取验证码"
            android:textColor="@color/white" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y180"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:layout_marginTop="@dimen/y50"
        android:background="@drawable/bg_et_grey_corner">

        <EditText
            android:id="@+id/et_yaoqing_code"
            android:layout_width="@dimen/x500"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:hint="请输入邀请码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="@dimen/x30"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/x35" />

        <TextView
            android:id="@+id/tv_yaoqingma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:paddingBottom="@dimen/x30"
            android:paddingLeft="@dimen/x80"
            android:paddingTop="@dimen/x30"
            android:text="什么是邀请码 ＞"
            android:textColor="@color/colorBlue" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/y80">

        <RelativeLayout
            android:id="@+id/rl_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rb"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x60"
                android:background="@drawable/radio"
                android:layout_margin="@dimen/x30"
                android:button="@null"
                android:clickable="false"
                />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/y40"
            android:layout_toRightOf="@id/rl_rb"
            android:text="已阅读并同意一下协议"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/x40" />

        <TextView
            android:id="@+id/tv_xieyi1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv"
            android:layout_below="@id/tv"
            android:layout_marginTop="@dimen/y80"
            android:text="《来活儿用户服务协议》"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/x35" />

        <TextView
            android:id="@+id/tv_xieyi2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv"
            android:layout_marginLeft="@dimen/x50"
            android:layout_marginTop="@dimen/y80"
            android:layout_toRightOf="@id/tv_xieyi1"
            android:text="《法律声明及隐私权政策》"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/x35" />

        <TextView
            android:id="@+id/tv_xieyi3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_xieyi1"
            android:layout_below="@id/tv_xieyi1"
            android:layout_marginTop="@dimen/y80"
            android:text="《来活儿服务保障》"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/x35" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:layout_marginTop="@dimen/y80"
        android:background="@drawable/bg_yellow_corner"
        android:gravity="center"
        android:paddingBottom="@dimen/y40"
        android:paddingTop="@dimen/y40"
        android:text="注册"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/x40" />

</LinearLayout>