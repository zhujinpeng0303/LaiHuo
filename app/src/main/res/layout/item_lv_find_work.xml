<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/x150"
        android:layout_margin="@dimen/x50"
        android:background="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y50"
        android:layout_toRightOf="@id/iv_img"
        android:text="南岗-找瓦工"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/x35" />


    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_name"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="@dimen/y20"
        android:background="@drawable/bg_green_big_corner"
        android:paddingBottom="@dimen/y8"
        android:paddingLeft="@dimen/x25"
        android:paddingRight="@dimen/x25"
        android:paddingTop="@dimen/y8"
        android:text="已完成"
        android:textColor="@color/white"
        android:textSize="@dimen/x25" />

    <TextView
        android:id="@+id/tv_jiage_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_status"
        android:layout_marginLeft="@dimen/x5"
        android:layout_toRightOf="@id/tv_status"
        android:background="@drawable/bg_green_stroke_big_corner"
        android:paddingBottom="@dimen/y8"
        android:paddingLeft="@dimen/x25"
        android:paddingRight="@dimen/x25"
        android:paddingTop="@dimen/y8"
        android:text="竞价: 1人"
        android:textColor="@color/colorGreenBottle"
        android:textSize="@dimen/x25" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_status"
        android:layout_below="@id/tv_status"
        android:layout_marginTop="@dimen/y20"
        android:text="宜家xxx"
        android:layout_marginBottom="@dimen/y50"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/x35" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x50"
        android:layout_marginTop="@dimen/y60"
        android:text="05-18 14:45"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/x30" />

    <View
        android:id="@+id/v"
        android:layout_width="@dimen/x2"
        android:layout_height="@dimen/y30"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y65"
        android:layout_toLeftOf="@id/tv_time"
        android:background="@color/colorGrey" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y60"
        android:layout_toLeftOf="@id/v"
        android:text="哈尔滨_南岗"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/x30" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_go"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/y150"
        android:layout_marginRight="@dimen/x50"
        />

</RelativeLayout>