<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/x150"
        android:layout_margin="@dimen/x30"
        android:background="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_avatar"
        android:layout_toEndOf="@+id/iv_avatar"
        android:layout_toRightOf="@+id/iv_avatar"
        android:text="谁谁"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/x35" />

    <ImageView
        android:id="@+id/iv_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_name"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="@dimen/x20"
        android:background="@mipmap/img_home" />

    <ImageView
        android:id="@+id/iv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="@dimen/x20"
        android:layout_toRightOf="@id/iv_card"
        android:background="@mipmap/img_home" />

    <TextView
        android:id="@+id/tv_star_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/x30"
        android:text="5.0"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/x35" />

    <ImageView
        android:layout_width="@dimen/x35"
        android:layout_height="@dimen/x35"
        android:layout_marginTop="@dimen/x32"
        android:layout_toLeftOf="@id/tv_star_count"
        android:background="@mipmap/img_home" />

    <ImageView
        android:layout_width="@dimen/x48"
        android:layout_height="@dimen/x48"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/y150"
        android:background="@mipmap/img_go" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y3"
        android:background="@color/colorBackgroud"
        android:layout_below="@id/iv_avatar"
        />

</RelativeLayout>