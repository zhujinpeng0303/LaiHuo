<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroud"
    android:orientation="vertical">

    <include layout="@layout/status_bar" />

    <EditText
        android:id="@+id/et_post"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y300"
        android:background="@color/white"
        android:gravity="left|top"
        android:hint="请输入您想发布的内容(限140字以内)"
        android:maxLength="140"
        android:padding="@dimen/x30"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/x35" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y3"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y150"
            android:background="@mipmap/img_home" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x50"
        android:background="@drawable/bg_yellow_corner"
        android:gravity="center"
        android:paddingBottom="@dimen/y50"
        android:paddingTop="@dimen/y50"
        android:text="确认"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/x40" />


</LinearLayout>