<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_card_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:layout_margin="@dimen/x50"
        android:background="@drawable/bg_et_grey_corner"
        android:gravity="center_vertical"
        android:hint="请输入银行卡号"
        android:inputType="number"
        android:maxLength="19"
        android:paddingLeft="@dimen/x20"
        android:textSize="@dimen/x35">

    </EditText>

    <EditText
        android:id="@+id/et_real_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:layout_marginBottom="@dimen/x50"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:background="@drawable/bg_et_grey_corner"
        android:gravity="center_vertical"
        android:hint="请输入真实姓名"
        android:maxLength="20"
        android:paddingLeft="@dimen/x20"
        android:textSize="@dimen/x35">

    </EditText>

    <EditText
        android:id="@+id/et_id_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:layout_marginBottom="@dimen/x50"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:background="@drawable/bg_et_grey_corner"
        android:digits="0123456789xXYy"
        android:gravity="center_vertical"
        android:hint="请输入身份证号"
        android:maxLength="18"
        android:paddingLeft="@dimen/x20"
        android:textSize="@dimen/x35">

    </EditText>

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:layout_marginBottom="@dimen/x50"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:background="@drawable/bg_et_grey_corner"
        android:gravity="center_vertical"
        android:hint="请输入绑定手机号"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingLeft="@dimen/x20"
        android:textSize="@dimen/x35">

    </EditText>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:layout_marginBottom="@dimen/x50"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50">

        <EditText
            android:id="@+id/et_code"
            android:layout_width="@dimen/x450"
            android:layout_height="match_parent"
            android:background="@drawable/bg_et_grey_corner"
            android:gravity="center_vertical"
            android:hint="请输入短信验证码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="@dimen/x20"
            android:textSize="@dimen/x35" />

        <TextView
            android:id="@+id/tv_get_code"
            android:layout_width="@dimen/x450"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_light_grey_corner"
            android:gravity="center"
            android:text="获取短信验证码"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/x35" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:background="@drawable/bg_yellow_corner"
        android:gravity="center"
        android:paddingBottom="@dimen/y40"
        android:paddingTop="@dimen/y40"
        android:text="提交认证"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/x40" />

</LinearLayout>