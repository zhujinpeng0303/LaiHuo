<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ref"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/status_bar" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorYellow"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_top"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y547" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_message"
                        android:layout_width="@dimen/x345"
                        android:layout_height="@dimen/x660"
                        android:layout_marginLeft="@dimen/x50"
                        android:background="@mipmap/img_home_message_bg"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/y100"
                            android:drawablePadding="@dimen/y80"
                            android:drawableTop="@mipmap/img_home_message"
                            android:text="信息市场"
                            android:textColor="@color/white"
                            android:textSize="@dimen/x50" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/y40"
                            android:text="就业求职"
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/x35" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/y40"
                            android:text="生活百态"
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/x35" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/y40"
                            android:text="畅快交流"
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/x35" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rl_find_worker"
                        android:layout_width="@dimen/x615"
                        android:layout_height="@dimen/x300"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@id/ll_message"
                        android:layout_marginLeft="@dimen/x50"
                        android:layout_marginRight="@dimen/x50"
                        android:background="@mipmap/img_home_find_bg">


                        <ImageView
                            android:id="@+id/iv1"
                            android:layout_width="@dimen/x120"
                            android:layout_height="@dimen/x120"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x80"
                            android:background="@mipmap/img_home_woker" />

                        <TextView
                            android:id="@+id/tv_zhao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x80"
                            android:layout_marginTop="@dimen/y90"
                            android:layout_toRightOf="@id/iv1"
                            android:text="找工人"
                            android:textColor="@color/white"
                            android:textSize="@dimen/x50" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_zhao"
                            android:layout_marginLeft="@dimen/x80"
                            android:layout_marginTop="@dimen/y20"
                            android:layout_toRightOf="@id/iv1"
                            android:text="找人干活很简单"
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/x35" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_find_work"
                        android:layout_width="@dimen/x615"
                        android:layout_height="@dimen/x300"
                        android:layout_alignBottom="@id/ll_message"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/x50"
                        android:layout_marginRight="@dimen/x50"
                        android:background="@mipmap/img_home_huo_bg">


                        <ImageView
                            android:id="@+id/iv2"
                            android:layout_width="@dimen/x120"
                            android:layout_height="@dimen/x120"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x80"
                            android:background="@mipmap/img_home_huo" />

                        <TextView
                            android:id="@+id/tv_gan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x80"
                            android:layout_marginTop="@dimen/y90"
                            android:layout_toRightOf="@id/iv2"
                            android:text="找活干"
                            android:textColor="@color/white"
                            android:textSize="@dimen/x50" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_gan"
                            android:layout_marginLeft="@dimen/x80"
                            android:layout_marginTop="@dimen/y20"
                            android:layout_toRightOf="@id/iv2"
                            android:text="随时干活都赚钱"
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/x35" />

                    </RelativeLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x50"
                    android:layout_marginRight="@dimen/x50"
                    android:layout_marginTop="@dimen/y50"
                    android:background="@drawable/bg_white_corner"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rl_post"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/x40"
                            android:text="当前有"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/x30" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="@dimen/x40"
                            android:drawableRight="@mipmap/img_go"
                            android:gravity="center"
                            android:text="查看详情"
                            android:textColor="@color/colorBlue"
                            android:textSize="@dimen/x20" />

                        <LinearLayout
                            android:id="@+id/ll1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv2"
                            android:layout_marginLeft="@dimen/x40"
                            android:layout_marginRight="@dimen/x40"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/x20"
                                android:layout_weight="1"
                                android:background="@drawable/bg_et_grey_corner">

                                <com.example.jason_jukes.laihuo.view.RandomTextView
                                    android:id="@+id/tv_post1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:paddingBottom="@dimen/x10"
                                    android:paddingTop="@dimen/x10"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/x50"
                                    android:textStyle="bold" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/x20"
                                android:layout_weight="1"
                                android:background="@drawable/bg_et_grey_corner">

                                <com.example.jason_jukes.laihuo.view.RandomTextView
                                    android:id="@+id/tv_post2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:paddingBottom="@dimen/x10"
                                    android:paddingTop="@dimen/x10"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/x50"
                                    android:textStyle="bold" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/x20"
                                android:layout_weight="1"
                                android:background="@drawable/bg_et_grey_corner">

                                <com.example.jason_jukes.laihuo.view.RandomTextView
                                    android:id="@+id/tv_post3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:paddingBottom="@dimen/x10"
                                    android:paddingTop="@dimen/x10"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/x50"
                                    android:textStyle="bold" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/x20"
                                android:layout_weight="1"
                                android:background="@drawable/bg_et_grey_corner">

                                <com.example.jason_jukes.laihuo.view.RandomTextView
                                    android:id="@+id/tv_post4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:paddingBottom="@dimen/x10"
                                    android:paddingTop="@dimen/x10"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/x50"
                                    android:textStyle="bold" />
                            </RelativeLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="项"
                                android:textColor="@color/colorGray"
                                android:textSize="@dimen/x35" />


                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ll1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/y40"
                            android:layout_marginTop="@dimen/y50"
                            android:text="发布的工作"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/x35" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_work"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/x40"
                            android:text="当前有"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/x30" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="@dimen/x40"
                            android:drawableRight="@mipmap/img_go"
                            android:gravity="center"
                            android:text="查看详情"
                            android:textColor="@color/colorBlue"
                            android:textSize="@dimen/x20" />

                        <LinearLayout
                            android:id="@+id/ll2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv1"
                            android:layout_marginLeft="@dimen/x40"
                            android:layout_marginRight="@dimen/x40"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/x20"
                                android:layout_weight="1"
                                android:background="@drawable/bg_et_grey_corner">

                                <com.example.jason_jukes.laihuo.view.RandomTextView
                                    android:id="@+id/tv_work1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:paddingBottom="@dimen/x10"
                                    android:paddingTop="@dimen/x10"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/x50"
                                    android:textStyle="bold" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/x20"
                                android:layout_weight="1"
                                android:background="@drawable/bg_et_grey_corner">

                                <com.example.jason_jukes.laihuo.view.RandomTextView
                                    android:id="@+id/tv_work2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:paddingBottom="@dimen/x10"
                                    android:paddingTop="@dimen/x10"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/x50"
                                    android:textStyle="bold" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/x20"
                                android:layout_weight="1"
                                android:background="@drawable/bg_et_grey_corner">

                                <com.example.jason_jukes.laihuo.view.RandomTextView
                                    android:id="@+id/tv_work3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:paddingBottom="@dimen/x10"
                                    android:paddingTop="@dimen/x10"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/x50"
                                    android:textStyle="bold" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/x20"
                                android:layout_weight="1"
                                android:background="@drawable/bg_et_grey_corner">

                                <com.example.jason_jukes.laihuo.view.RandomTextView
                                    android:id="@+id/tv_work4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:paddingBottom="@dimen/x10"
                                    android:paddingTop="@dimen/x10"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/x50"
                                    android:textStyle="bold" />
                            </RelativeLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="位"
                                android:textColor="@color/colorGray"
                                android:textSize="@dimen/x35" />


                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ll2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/y40"
                            android:layout_marginTop="@dimen/y50"
                            android:text="上班的工人"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/x35" />


                    </RelativeLayout>


                </LinearLayout>


                <ImageView
                    android:id="@+id/iv_middle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y274"
                    android:layout_marginLeft="@dimen/x50"
                    android:layout_marginRight="@dimen/x50"
                    android:layout_marginTop="@dimen/y50"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y100"
                    android:layout_marginLeft="@dimen/x50"
                    android:layout_marginRight="@dimen/x50"
                    android:orientation="vertical">

                </LinearLayout>


            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>