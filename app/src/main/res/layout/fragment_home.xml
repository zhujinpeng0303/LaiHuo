<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/status_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorYellow"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_top"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_message"
                    android:layout_width="@dimen/x345"
                    android:layout_height="@dimen/x660"
                    android:layout_marginLeft="@dimen/x50"
                    android:background="@mipmap/img_home_message_bg"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/y100"
                        android:drawablePadding="@dimen/y80"
                        android:drawableTop="@mipmap/img_home_message"
                        android:text="信息市场"
                        android:textColor="@color/white"
                        android:textSize="@dimen/x50" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/y40"
                        android:text="就业求职"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/x35" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/y40"
                        android:text="生活百态"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/x35" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/y40"
                        android:text="畅快交流"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/x35" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_find_worker"
                    android:layout_width="@dimen/x615"
                    android:layout_height="@dimen/x300"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/ll_message"
                    android:layout_marginLeft="@dimen/x50"
                    android:layout_marginRight="@dimen/x50"
                    android:background="@mipmap/img_home_find_bg">


                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_width="@dimen/x120"
                        android:layout_height="@dimen/x120"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x80"
                        android:background="@mipmap/img_home_woker" />

                    <TextView
                        android:id="@+id/tv_zhao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x80"
                        android:layout_marginTop="@dimen/y90"
                        android:layout_toRightOf="@id/iv1"
                        android:text="找工人"
                        android:textColor="@color/white"
                        android:textSize="@dimen/x50" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_zhao"
                        android:layout_marginLeft="@dimen/x80"
                        android:layout_marginTop="@dimen/y20"
                        android:layout_toRightOf="@id/iv1"
                        android:text="找人干活很简单"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/x35" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_find_work"
                    android:layout_width="@dimen/x615"
                    android:layout_height="@dimen/x300"
                    android:layout_alignBottom="@id/ll_message"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/x50"
                    android:layout_marginRight="@dimen/x50"
                    android:background="@mipmap/img_home_huo_bg">


                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="@dimen/x120"
                        android:layout_height="@dimen/x120"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x80"
                        android:background="@mipmap/img_home_huo" />

                    <TextView
                        android:id="@+id/tv_gan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x80"
                        android:layout_marginTop="@dimen/y90"
                        android:layout_toRightOf="@id/iv2"
                        android:text="找活干"
                        android:textColor="@color/white"
                        android:textSize="@dimen/x50" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_gan"
                        android:layout_marginLeft="@dimen/x80"
                        android:layout_marginTop="@dimen/y20"
                        android:layout_toRightOf="@id/iv2"
                        android:text="随时干活都赚钱"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/x35" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_count"
                android:layout_marginTop="@dimen/y50"
                android:layout_width="match_parent"
                android:background="@color/colorBlack"
                android:layout_height="@dimen/y200">

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_middle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y275"
                android:layout_margin="@dimen/x50"
                android:scaleType="fitXY"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x500"
                android:layout_marginLeft="@dimen/x50"
                android:layout_marginRight="@dimen/x50"
                android:background="@drawable/bg_grey_corner" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x500"
                android:layout_marginBottom="@dimen/x100"
                android:layout_marginLeft="@dimen/x50"
                android:layout_marginRight="@dimen/x50"
                android:layout_marginTop="@dimen/x50"
                android:background="@drawable/bg_grey_corner" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>