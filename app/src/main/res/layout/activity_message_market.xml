<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroud"
    android:orientation="vertical">

    <include layout="@layout/status_bar" />

    <ListView
        android:layout_marginTop="@dimen/y150"
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

    <LinearLayout
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/y50"
        android:background="@color/transparent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_post_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x50"
            android:layout_weight="2"
            android:background="@drawable/bg_red_big_corner"
            android:gravity="center"
            android:paddingBottom="@dimen/y40"
            android:paddingTop="@dimen/y40"
            android:text="发布信息"
            android:textColor="@color/white"
            android:textSize="@dimen/x40" />

        <TextView
            android:id="@+id/tv_mine_part"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x50"
            android:layout_marginRight="@dimen/x50"
            android:layout_weight="1"
            android:background="@drawable/bg_blue_big_corner"
            android:gravity="center"
            android:paddingBottom="@dimen/y40"
            android:paddingTop="@dimen/y40"
            android:text="我参与的"
            android:textColor="@color/white"
            android:textSize="@dimen/x40" />

    </LinearLayout>

</FrameLayout>