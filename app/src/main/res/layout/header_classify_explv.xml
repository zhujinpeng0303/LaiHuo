<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackgroud"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/x5"
            android:layout_height="@dimen/y40"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x50"
            android:background="@color/DarkOrange" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x20"
            android:text="热门项目"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/x35" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y320"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x3"
            android:layout_marginRight="@dimen/x3"
            android:layout_weight="1"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_classify"
                android:layout_width="@dimen/x150"
                android:layout_height="@dimen/x150"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/ic_launcher"
                android:layout_marginTop="@dimen/y30" />

            <TextView
                android:id="@+id/tv_classify_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_classify"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/y50"
                android:layout_marginTop="@dimen/y20"
                android:text="全部分类"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/x35" />

        </RelativeLayout>

        <View
            android:layout_width="@dimen/x2"
            android:layout_height="wrap_content"
            android:background="@color/colorBackgroud" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


    </LinearLayout>

</LinearLayout>