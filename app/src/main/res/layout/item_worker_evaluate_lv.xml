<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/x120"
        android:layout_height="@dimen/x120"
        android:layout_margin="@dimen/x50"
        android:background="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x60"
        android:layout_toRightOf="@id/iv_avatar"
        android:text="谁谁"
        android:textSize="@dimen/x35" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_name"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="@dimen/y10"
        android:text="2018-25-25"
        android:textSize="@dimen/x30" />


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_time"
        android:layout_marginRight="@dimen/x80"
        android:layout_marginTop="@dimen/y30"
        android:layout_toRightOf="@id/iv_avatar"
        android:text="评论内容上课了的机会回家佛IQ我卡拉胶双方都立刻就拉上就拉上课了金坷垃"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/x35" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:layout_below="@id/tv_content"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:layout_marginTop="@dimen/y30"
        android:background="@color/colorBackgroud" />

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x50"
        android:text="4.8"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/x40" />

    <ImageView
        android:layout_width="@dimen/x50"
        android:layout_height="@dimen/x50"
        android:layout_alignBottom="@id/tv_score"
        android:layout_marginRight="@dimen/x20"
        android:layout_toLeftOf="@id/tv_score"
        android:background="@mipmap/rating_small_full" />


</RelativeLayout>